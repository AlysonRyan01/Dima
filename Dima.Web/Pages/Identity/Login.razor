@page "/login"
@layout HeadlessLayout
@inherits LoginPage

<PageTitle>Dima - Entrar</PageTitle>

<MudGrid Justify="Justify.Center">
    <MudItem xs="6" sm="12" md="8" lg="6" xl="6" xxl="6">
        <MudPaper Class="mud-width-full pa-8">
            <div class="d-flex justify-center">
                <img src="Images/dima.png" alt="Dima controle financeiro" width="250"/>
            </div>

            <EditForm Model="@LoginRequest" OnValidSubmit="OnValidSubmitAsync">
                <DataAnnotationsValidator/>

                <MudTextField
                    T="string"
                    Label="E-mail"
                    HelperText="Campo obrigatório"
                    InputType="InputType.Email"
                    For="@(() => LoginRequest.Email)"
                    @bind-Value="LoginRequest.Email"
                />

                <MudTextField
                    T="string"
                    Label="Senha"
                    HelperText="Campo obrigatório"
                    InputType="InputType.Password"
                    For="@(() => LoginRequest.Password)"
                    @bind-Value="LoginRequest.Password"
                />

                <div class="d-flex mt-8">
                    @if (IsBusy)
                    {
                        <MudProgressCircular Color="Color.Info" Indeterminate="true" />
                    }
                    else
                    {
                        <MudButton
                            ButtonType="ButtonType.Submit"
                            Variant="Variant.Filled"
                            Color="Color.Primary">
                            ENTRAR
                        </MudButton>

                        <MudSpacer/>

                        <MudButton Href="/register">CRIAR UMA CONTA</MudButton>
                    }
                </div>
            </EditForm>
        </MudPaper>
    </MudItem>
</MudGrid>
