@page "/comecar"
@layout HeadlessLayout

<PageTitle>Dima - Registrar</PageTitle>

<MudGrid Justify="Justify.Center">
    <MudItem xs="6" sm="12" md="8" lg="6" xl="6" xxl="6">
        <MudPaper Class="mud-width-full pa-8">
            <div class="d-flex justify-center">
                <img src="Images/dima.png" alt="Dima controle financeiro" width="250"/>
            </div>

            <MudForm @ref="_mudForm">
                <MudTextField T="string" Label="E-mail" InputType="InputType.Email" Required="true" 
                              RequiredError="Informe o E-mail" 
                              Validation="@(new EmailAddressAttribute {ErrorMessage="E-mail invalido"})"/>
                
                <MudTextField T="string" Label="Senha" InputType="InputType.Password" Required="true" 
                              RequiredError="Senha invalida"></MudTextField>
            </MudForm>
            
            <div class="d-flex mt-8">
                <MudButton Variant="Variant.Filled" Color="Color.Primary">COMEÇAR</MudButton>
                <MudSpacer/>
                <MudButton Href="/login">JÁ TENHO UMA CONTA</MudButton>
            </div>
        </MudPaper>
    </MudItem>
</MudGrid>

@code {

    MudForm _mudForm;

}