@inherits LayoutComponentBase

<MudThemeProvider Theme="Configuration.Theme"/>
<MudSnackbarProvider/>

<AuthorizeView>
    <Authorized>
        <MudLayout>
            <MudAppBar>
                <MudIconButton Icon="@Icons.Material.Rounded.Menu" Color="Color.Inherit" Edge="Edge.Start" OnClick="ToggleDrawer"/>
                Dima
                <MudSpacer/>
                <MudText Typo="Typo.caption">
                    @context.User.Identity?.Name
                </MudText>
            </MudAppBar>
            <MudDrawer @bind-Open="@IsDrawerOpened">
                <h3>Nav Menu</h3>
            </MudDrawer>
            <MudMainContent>
                <MudContainer>
                    @Body
                </MudContainer>
            </MudMainContent>
        </MudLayout>
    </Authorized>
    <NotAuthorized>
        <LoginRedirect/>
    </NotAuthorized>
</AuthorizeView>

@code
{
    private bool IsDrawerOpened = true;

    private void ToggleDrawer()
    {
        IsDrawerOpened = !IsDrawerOpened;
    }
}